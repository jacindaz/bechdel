<h1>Info about <%= @movie.title %></h1>
<br>

<ul>
  <li>Year: <%= @movie.year %></li>
  <li>Language: <%= @movie.language %></li>
  <li>Country produced: <%= @movie.country_produced %></li>
</ul>

<br>
<h4>Summary</h4>
<p><%= @movie.summary %></p>

<%= button_to "Vote Up", movie_vote_path([@movie, @vote], params.merge(vote: 1)), action: :update, method: :patch, role: "button" %>
<%= button_to "Vote Down", movie_vote_path([@movie, @vote], params.merge(vote: -1)), action: :update, method: :patch, role: "button" %>
