<div class="card" style="height: 240px;">
    <div class="card-image">

    </div>
    <div class="card-header">
      <h5 class="headers-refills-font"><%= link_to movie.title, movie_path(movie) %><br>
      <%= movie.year %></h5>
    </div>
    <div class="card-copy">
      <p>
        <span style="float:left; padding-right:15px;">
          <%= image_tag "#{movie.thumbnail_url}", alt: "Movie poster image", width: 54 %>
        </span>
        <%= truncate movie.summary, length: 140, separator: ' ' %>
      </p>
    </div>
    <div class="card-stats" style="position: absolute; bottom:0;">
      <ul>
        <li><center><%= movie.country_produced %></center></li>
      </ul>
    </div>
  </div>
