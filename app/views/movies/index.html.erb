<h1>Top <%= @num_movies %> Box Office Movies</h1>
<br>

<div class="cards">
<% @box_office_movies.each do |movie| %>

  <div class="card" style="height: 240px;">
    <div class="card-image">

    </div>
    <div class="card-header">
      <%= movie[:title] %><br>
      <%= movie[:year] %>
    </div>
    <div class="card-copy">
      <p>
        <span style="float:left; padding-right:15px;">
          <%= image_tag "#{movie[:thumbnail_url]}", alt: "Movie poster image" %>
        </span>
        <%= truncate movie[:summary], length: 140, separator: ' ' %>
      </p>
    </div>
    <div class="card-stats" style="position: absolute; bottom:0;">
      <ul>
        <li><%= movie[:language] %></li>
        <li><%= movie[:country_produced] %></li>
      </ul>
    </div>
  </div>
<% end %>
</div>
