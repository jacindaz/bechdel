<h1>Submit a New Movie</h1>

<% current_user.errors %>

<%= simple_form_for(@movie) do |f| %>
  <% if @movie.errors.messages.present? %>
    <div class="errors-div">
      <p>I'm sorry, your movie couldn't be saved because:</p>
      <ul>
        <% @movie.errors.messages.each do |field, error| %>
          <li><%= field.capitalize %> <%= error[0] %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :title %>
  <%= f.input :year, collection: (1900..2014).to_a.reverse, prompt: "Select year produced" %>
  <%= f.input :summary %>
  <%= f.input :language, collection: ["English", "French", "Spanish", "Chinese", "Swedish"], prompt: "Select language spoken" %>
  <%= f.input :country_produced, collection: Movie::COUNTRIES, prompt: "Country movie produced" %>
  <%= f.button :submit, "Submit New Movie" %>

<% end %>
